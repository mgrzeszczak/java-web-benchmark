FROM amazoncorretto:21-alpine
ARG QUARKUS_APP_PATH
COPY $QUARKUS_APP_PATH quarkus-app
ENTRYPOINT ["java","-XX:+ExitOnOutOfMemoryError","-Dcom.sun.management.jmxremote","-Dcom.sun.management.jmxremote.port=5050","-Dcom.sun.management.jmxremote.ssl=false","-Dcom.sun.management.jmxremote.authenticate=false","-jar","quarkus-app/quarkus-run.jar"]